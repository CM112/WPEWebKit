#!/usr/bin/env bash

source "$(dirname "$0")/../../glib/dependencies/apt"

# If the package $1 is available, prints it. Otherwise prints $2.
# Useful for handling when a package is renamed on new versions of Debian/Ubuntu.
function aptIfElse {
    if apt-cache show $1 &>/dev/null; then
        echo $1
    else
        echo $2
    fi
}

PACKAGES+=(
    # These are dependencies necessary for building WPE.
    g++
    gcc
    libgbm-dev
    libgnutls28-dev
    libicu-dev
    libxml2-dev
    pkg-config
    zlib1g-dev

    # These are dependencies necessary for running tests.
    python3-psutil

    # These are dependencies necessary for building the jhbuild.
    libegl-mesa0
    libluajit-5.1-dev
    libmount-dev
    libopus-dev
    libpulse-dev
    libsrtp2-dev
    libtheora-dev
    libvorbis-dev
    libvpx-dev
    libwayland-dev
    libxcb-xkb-dev
    libxkbcommon-dev
    libxrandr-dev
    luajit
)
